<Window x:Class="Best_Slots.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Best_Slots"
        mc:Ignorable="d"
        Title="Slots" Height="600" Width="800" Icon="icons/Без названия (2).jpg" Background="White">
    <Grid x:Name="MyGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="400*"/>
            <RowDefinition Height="90*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ScrollViewer x:Name="ScrollColumn1" Grid.Column="1" Margin="0,0,0,30" UseLayoutRounding="False" Grid.Row="1" VerticalScrollBarVisibility="Hidden" IsEnabled="False">
            <ListBox x:Name="Column1" d:ItemsSource="{d:SampleData ItemCount=5}" Focusable="False" ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Grid.IsSharedSizeScope="True" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" ScrollViewer.CanContentScroll="False" Panel.ZIndex="-1" BorderBrush="{x:Null}" Grid.Column="1" Foreground="Black" BorderThickness="0,0,0,0" IsEnabled="False" UseLayoutRounding="False" Visibility="Hidden" Background="{x:Null}" />
        </ScrollViewer>
        <ScrollViewer x:Name="ScrollColumn2" Grid.Column="2" Margin="0,0,0,30" UseLayoutRounding="False" VerticalScrollBarVisibility="Hidden" IsEnabled="False" Grid.Row="1">
            <ListBox x:Name="Column2" d:ItemsSource="{d:SampleData ItemCount=5}" Focusable="False" ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Grid.IsSharedSizeScope="True" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Grid.Column="2" ScrollViewer.CanContentScroll="False" BorderBrush="{x:Null}" BorderThickness="0,0,0,0" IsEnabled="False" UseLayoutRounding="False" Visibility="Hidden"/>
        </ScrollViewer>
        <ScrollViewer x:Name="ScrollColumn3" Grid.Column="3" Margin="0,0,0,30" UseLayoutRounding="False" IsEnabled="False" VerticalScrollBarVisibility="Hidden" Grid.Row="1" >
            <ListBox x:Name="Column3" d:ItemsSource="{d:SampleData ItemCount=5}" Focusable="False" ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Grid.IsSharedSizeScope="True" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Grid.Column="3" IsEnabled="False" ScrollViewer.CanContentScroll="False" BorderBrush="{x:Null}" BorderThickness="0,0,0,0" UseLayoutRounding="False" Visibility="Hidden"/>
        </ScrollViewer>
        <Button x:Name="Play" Content="play" Grid.Column="3" Click="Play_Click" Panel.ZIndex="2" Background="{x:Null}" RenderTransformOrigin="0,0" BorderThickness="0,0,0,0" Margin="125,5,30,5" Grid.ColumnSpan="2" Grid.Row="2">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Image x:Name="img" Source="/images/buttons/button-play.png" Stretch="Uniform" RenderTransformOrigin="0.5,0.5"/>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="img" Property="Opacity" Value="0.8"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="img" Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="img" Property="Effect">
                                <Setter.Value>
                                    <BlurEffect Radius="5"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="True">
                            <Setter TargetName="img" Property="Effect">
                                <Setter.Value>
                                    <BlurEffect Radius="0"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <TextBlock x:Name="Win" TextWrapping="Wrap" Grid.Row="2" Grid.Column="2" Margin="10,25,40,10" Grid.ColumnSpan="2" FontSize="22" Panel.ZIndex="2" Foreground="White"/>
        <Button x:Name="Decrease" Grid.Column="1" Content="&lt;" Grid.Row="2" Margin="10,30,0,29" HorizontalAlignment="Left" FontSize="18" FontWeight="Bold" Click="Decrease_Click" HorizontalContentAlignment="Center" VerticalContentAlignment="Stretch" Panel.ZIndex="2">
            <Button.Template>
                <ControlTemplate>
                    <Image x:Name="dec" Source="/images/buttons/decrease.png" Stretch="Uniform" RenderTransformOrigin="0.5,0.5"/>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="dec" Property="Opacity" Value="0.8"/>
                            <Setter TargetName="dec" Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="dec" Property="Effect">
                                <Setter.Value>
                                    <BlurEffect Radius="5"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="True">
                            <Setter TargetName="dec" Property="Effect">
                                <Setter.Value>
                                    <BlurEffect Radius="0"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="Increase" Grid.Column="1" Content="&gt;" Grid.Row="2" HorizontalAlignment="Right" Margin="0,30,10,29" FontSize="18" FontWeight="Bold" Click="Increase_Click" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Center" Panel.ZIndex="2" RenderTransformOrigin="0.5,0.5">
            <Button.Template>
                <ControlTemplate>
                    <Image x:Name="inc" Source="/images/buttons/increase.png" Stretch="Uniform" RenderTransformOrigin="0.5,0.5"/>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="inc" Property="Opacity" Value="0.8"/>
                            <Setter TargetName="inc" Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="inc" Property="Effect">
                                <Setter.Value>
                                    <BlurEffect Radius="5"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="True">
                            <Setter TargetName="inc" Property="Effect">
                                <Setter.Value>
                                    <BlurEffect Radius="0"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <TextBlock x:Name="Deposit" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="2" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="60" Height="30" TextAlignment="Center" FontWeight="Bold" FontSize="14" Panel.ZIndex="2" Margin="0,40,0,0" Foreground="White"/>
        <TextBlock x:Name="Bank" Grid.Column="4" TextWrapping="Wrap" Text="15,00 BYN" Margin="0,10,0,0" FontWeight="Bold" TextAlignment="Center" FontSize="16" VerticalAlignment="Top" Panel.ZIndex="2" Grid.RowSpan="2" Foreground="Black"/>
        <Border BorderBrush="Black" BorderThickness="3,3,3,3" Grid.ColumnSpan="5" Margin="97,0,96,30" Grid.Row="1"/>
        <Border BorderBrush="Black" BorderThickness="1" Grid.Column="2" Margin="0,0,0,30" Grid.Row="1"/>
        <Button x:Name="Dodep" Content="Додепчи" VerticalAlignment="Top" Margin="0,10,0,0" Height="50" Width="50" FontWeight="Bold" Click="Dodep_Click" HorizontalAlignment="Center" Visibility="Hidden" Panel.ZIndex="2" Grid.RowSpan="2">
            <Button.Template>
                <ControlTemplate>
                    <Image x:Name="dodep" Source="/images/buttons/dodep.png" Stretch="Uniform"/>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="dodep" Property="Opacity" Value="0.8"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Label Content="Ставка" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Panel.ZIndex="2" Margin="0,11,0,0" Height="29" Width="55" Foreground="White"/>
        <Rectangle x:Name="RedLine" Grid.ColumnSpan="3" Stroke="Red" Fill="Red" Margin="20,0,20,27" Grid.Column="1" Panel.ZIndex="1" Grid.Row="1" VerticalAlignment="Center" Height="3" Visibility="Hidden"/>
        <Button x:Name="Earn" Content="Вывод" Grid.Row="2" Margin="5,10,5,10" Click="Earn_Click" FontWeight="Bold">
            <Button.Template>
                <ControlTemplate>
                    <Image x:Name="earn" Source="/images/buttons/earn.png" Stretch="Uniform"/>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="earn" Property="Opacity" Value="0.8"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="earn" Property="Effect">
                                <Setter.Value>
                                    <BlurEffect Radius="5"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="True">
                            <Setter TargetName="earn" Property="Effect">
                                <Setter.Value>
                                    <BlurEffect Radius="0"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Rectangle x:Name="BottomPanel" Fill="#FF876245" Panel.ZIndex="-1" StrokeThickness="0" Grid.Row="2" Grid.ColumnSpan="5"/>
        <Rectangle x:Name="Background" Panel.ZIndex="-1" StrokeThickness="0" Grid.ColumnSpan="5" Grid.RowSpan="2">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/images/back/bstu.jpg"/>
            </Rectangle.Fill>
        </Rectangle>
        <Image Grid.Column="2" Panel.ZIndex="1" Source="/images/logo.png" Stretch="Fill" VerticalAlignment="Top" Height="140" Margin="15,-52,15,0" Grid.RowSpan="2"/>
        <Button x:Name="ThemeChanger" Grid.Column="4" Content="Button" HorizontalAlignment="Center" Grid.Row="1" Click="ThemeChanger_Click" VerticalAlignment="Top" Margin="17,140,15,0">
            <Button.Template>
                <ControlTemplate>
                    <Image x:Name="change" Source="/images/buttons/facultTheme.png" Stretch="Uniform"/>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="change" Property="Opacity" Value="0.8"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="True">
                            <Setter TargetName="change" Property="Effect">
                                <Setter.Value>
                                    <BlurEffect Radius="0"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="change" Property="Effect">
                                <Setter.Value>
                                    <BlurEffect Radius="5"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Rectangle x:Name="DepPanel" Grid.Column="1" HorizontalAlignment="Center" Height="65" Grid.Row="2" VerticalAlignment="Center" Width="75" Fill="#FFA4724C" Stroke="Black"/>
        <Image Grid.Column="4" Grid.Row="1" Source="/images/buttons/scroller.png" Panel.ZIndex="-1" VerticalAlignment="Center" Margin="2,0,0,30">
            <Image.OpacityMask>
                <ImageBrush ImageSource="/images/buttons/scroller.png" Stretch="Uniform"/>
            </Image.OpacityMask>
        </Image>
    </Grid>
</Window>
